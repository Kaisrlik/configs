[am]
	threeWay = true
[core]
	editor = nvim
	excludesFile = ~/.gitignore
	pager = less -XF
[fetch]
	# Crete commit grapth on fetch
	writeCommitGraph = true
[user]
	email = jan.kaisrlik@intel.com
	name = Jan Kaisrlik
[commit]
	verbose = true
[color]
	ui = auto
[format]
	signoff = true
[sendemail]
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpencryption = tls
	smtpuser = ja.kaisrlik@gmail.com
	from = ja.kaisrlik@gmail.com
[tig]
	line-graphics = yes     # Disable graphics characters
	tab-size = 4            # Number of spaces per tab
	main-view-id = yes      # Show commit hash in main view
[alias]
	clonemaster = clone --filter-blob:none --filter=tree:0
	ci = commit -s
	forcerm = !f() { filter-branch --index-filter 'rm -f $1' -- --all }; f
	last = log -1 HEAD
	unstage = reset HEAD --
	merged = branch --merged
	# blame, ignore movement, commits creating file, any commits
	blamedeep = blame -w -C -C -C
	cg = commit-graph write
	dmerged = !git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d
	graph = log --graph --date=short --summary --shortstat
	start = !git init && git add -A && git commit -m "init"
	df = diff --word-diff=color
	find-file = "!f() { \
			for b in $(git rev-list --all); do \
				git ls-tree -r --name-only $b | grep --quiet \"$1\" && echo $b; \
			done; \
		}; f"
[merge]
	tool = nvim
[status]
	submoduleSummary = yes
[push]
	default = current
[pull]
	rebase = true
# [rerere]
# 	# Remember how confict were solved
# 	enabled = true
[init]
	defaultBranch = master
[advice]
	skippedCherryPicks = false
[url "ssh://git@github.com"]
	insteadOf = http://github.com
	insteadOf = https://github.com
[diff]
	algorithm = patience
