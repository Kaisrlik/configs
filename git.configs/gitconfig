[am]
	threeWay = true
[core]
	editor = nvim
	excludesFile = ~/.gitignore
	pager = less -XF
[fetch]
	# Crete commit grapth on fetch
	writeCommitGraph = true
[user]
	email = ja.kaisrlik@gmail.com
	name = Jan Kaisrlik
[commit]
	verbose = true
[color]
	ui = auto
[checkout]
	defaultRemote=origin
[branch]
	sort = -committerdate
[format]
	signoff = true
[sendemail]
	smtpserver = smtp.gmail.com
	smtpserverport = 587
	smtpencryption = tls
	smtpuser = ja.kaisrlik@gmail.com
	from = ja.kaisrlik@gmail.com
[tig]
	# graphics characters
	line-graphics = ascii
	# Number of spaces per tab
	tab-size = 4
	# Show commit hash in main view
	main-view-id = yes
[tig "bind"]
	main = r ?git branch -D %(branch)
[alias]
	clonefast = clone --filter-blob:none --filter=tree:0
	ci = commit -s
	rmall = !f() { filter-branch --index-filter 'rm -f $1' -- --all }; f
	last = log -1
	no-upstream = !git branch --format '%(authordate:iso8601)   %(refname:short).%(upstream)' | awk -F. '{if (!$2) print $1}' | sort -r
	local-only = "!f() { \
		git for-each-ref --format='%(refname)' refs/remotes refs/heads \
			| sed -e 's|refs/remotes/[^/]*/|r |g' -e 's|refs/heads/|l |g' \
			| grep -v '^HEAD$' | sort -k2 | uniq -f1 -u | grep -v '^r' | awk '{print $2}'; \
		}; f"

	unstage = reset HEAD --
	merged = branch --merged
	# blame, ignore movement, commits creating file, any commits
	blamedeep = blame -w -C -C -C
	cg = commit-graph write
	dmerged = !git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d
	graph = log --graph --date=short --summary --shortstat
	start = !git init && git add -A && git commit -m "init"
	df = diff --word-diff=color
	hash = describe --always --abbrev=8 --dirty
	find-file = "!f() { \
			for b in $(git rev-list --all); do \
				git ls-tree -r --name-only $b | grep --quiet \"$1\" && echo $b; \
			done; \
		}; f"
[merge]
	tool = nvim
[status]
	submoduleSummary = yes
[push]
	default = current
[pull]
	rebase = true
# [rerere]
# 	# Remember how confict were solved
# 	enabled = true
[init]
	defaultBranch = master
[advice]
	skippedCherryPicks = false
	pushFetchFirst = true
[url "ssh://git@github.com"]
	insteadOf = http://github.com
	insteadOf = https://github.com
[diff]
	algorithm = patience
[includeIf "gitdir:~/devel/intel/"]
	path = ~/devel/intel/.gitconfig
